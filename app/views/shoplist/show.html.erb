<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= @shop["title"] %></title>
  <!-- Bootstrap CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome CDN for icons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  <style>
    /* 店舗詳細ページのスタイル */
    .shop-details {
      margin-top: 20px;
    }
    .shop-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 1px solid #ccc;
      padding-bottom: 10px;
      margin-bottom: 20px;
    }
    .shop-header h1 {
      font-size: 2rem;
    }
    .shop-map {
      height: 300px;
      width: 100%;
    }
    .comment-section {
      margin-top: 20px;
    }
    .comment-box {
      border: 1px solid #ccc;
      padding: 10px;
      margin-bottom: 20px;
      border-radius: 5px;
      background-color: #f8f9fa;
    }
    .reference-image {
      height: 200px;
      width: 100%;
      object-fit: cover;
      border: 1px solid #ccc; /* 画像を囲むフレーム */
      border-radius: 5px;
      margin-bottom: 10px;
    }
    .details-section {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
    }
    .details-section > div {
      flex: 1 1 45%;
      margin-bottom: 20px;
    }
    .sns-links {
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- 店舗詳細情報 -->
    <div class="shop-details">
      <div class="shop-header">
        <h1><%= @shop["title"] %></h1>
        <a href="/" class="btn btn-secondary">戻る</a>
      </div>
      <div class="details-section">
        <div>
          <!-- 参考画像 -->
          <img src="https://picsum.photos/600/400" alt="ラーメンの参考画像" class="reference-image">
          <!-- 管理人のコメントセクション -->
          <div class="comment-section">
            <h5>管理人のコメント</h5>
            <div class="comment-box">
              <p>ここに管理人がコメントを書くことができます。</p>
            </div>
          </div>
          <!-- Google Maps セクション -->
          <div class="shop-map" id="map"></div>
        </div>
        <div>
          <!-- 店舗情報 -->
          <h5>住所</h5>
          <p>東京都〇〇区〇〇</p>
          <h5>営業時間</h5>
          <p>11:00 - 22:00</p>
          <!-- SNSリンク -->
          <div class="sns-links">
            <h5>フォローする</h5>
            <a href="https://twitter.com" target="_blank" class="btn btn-outline-primary me-2"><i class="fab fa-twitter"></i> Twitter</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Google Maps API -->
  <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_GOOGLE_MAPS_API_KEY"></script>
  <script>
    function initMap() {
      var shopLocation = { lat: 35.6895, lng: 139.6917 }; // 仮の緯度経度
      var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 15,
        center: shopLocation
      });
      var marker = new google.maps.Marker({
        position: shopLocation,
        map: map
      });
    }
    document.addEventListener("DOMContentLoaded", initMap);
  </script>
</body>
</html>
